<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="truckerboys.otto">
    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/mapsnotext"
        android:theme="@style/AppTheme">


        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyDEzAa31Uxan5k_06udZBkMRkZb1Ju0aSk"/>

        <activity
            android:name=".MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".OTTOActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".newroute.RouteActivity"
            android:windowSoftInputMode="stateVisible">
        </activity>

        <activity
            android:name=".NoConnectionActivity">
        </activity>

    </application>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

</manifest>
