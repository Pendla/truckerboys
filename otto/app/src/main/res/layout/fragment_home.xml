<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background_color"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:divider="@android:color/black">

    <TableRow
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-10dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageButton
            android:layout_margin="40dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/newRouteButton"
            android:layout_column="6"
            android:src="@drawable/newroute2"
            android:scaleType="centerInside"
            android:background="#00ffffff"
            android:clickable="true"
            android:onClick="jumpToNewRoute"
            android:layout_gravity="center_vertical" />

        <ImageButton
            android:layout_margin="40dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/continueRouteButton"
            android:layout_column="21"
            android:src="@drawable/continueroute2"
            android:scaleType="centerInside"
            android:background="#00ffffff"
            android:clickable="true"
            android:layout_gravity="center_vertical" />

    </TableRow>

    <TableRow
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageButton
            android:layout_margin="40dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/mapsButton"
            android:layout_column="6"
            android:src="@drawable/maps2"
            android:scaleType="centerInside"
            android:background="#00ffffff"
            android:clickable="true" />

        <ImageButton
            android:layout_margin="40dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/clockButton"
            android:layout_column="21"
            android:src="@drawable/clock2"
            android:scaleType="centerInside"
            android:background="#00ffffff"
            android:clickable="true" />

    </TableRow>

    <TableRow
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageButton
            android:layout_margin="40dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/statsButton"
            android:layout_column="6"
            android:src="@drawable/stats2"
            android:scaleType="centerInside"
            android:background="#00ffffff"
            android:clickable="true" />

        <ImageButton
            android:layout_margin="40dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/settingsButton"
            android:layout_column="21"
            android:src="@drawable/settings2"
            android:scaleType="centerInside"
            android:focusable="true"
            android:background="#00ffffff"
            android:clickable="true" />

    </TableRow>

</TableLayout>