<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:id="@+id/search_box"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_dropshadow"
        android:orientation="vertical">

        <SearchView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_view"
            android:iconifiedByDefault="false"
            android:layout_gravity="right" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/results_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_dropshadow"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/history_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_dropshadow"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/textLight"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:text="Recent destinations"
            android:id="@+id/textView" />

        <View
            android:id="@+id/divider0"
            android:layout_margin="10dp"
            android:layout_width="fill_parent"
            android:layout_below="@+id/dailyStats"
            android:layout_height="0.5dp"
            android:background="@color/textLightest"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gibraltargatan 90, Göteborg"
                android:id="@+id/history1"
                android:textColor="@color/textLight"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
        <View
            android:id="@+id/divider1"
            android:layout_margin="10dp"
            android:layout_width="fill_parent"
            android:layout_below="@+id/dailyStats"
            android:layout_height="0.5dp"
            android:background="@color/textLightest"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gibraltargatan 90, Göteborg"
                android:id="@+id/history2"
                android:textColor="@color/textLight"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
        <View
            android:id="@+id/divider2"
            android:layout_margin="10dp"
            android:layout_width="fill_parent"
            android:layout_below="@+id/dailyStats"
            android:layout_height="0.5dp"
            android:background="@color/textLightest"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gibraltargatan 90, Göteborg"
                android:id="@+id/history3"
                android:textColor="@color/textLight"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>