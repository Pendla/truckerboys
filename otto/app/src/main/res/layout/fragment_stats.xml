<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:padding="15dp">


    <ScrollView
        android:id="@+id/ScrollView"
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:fadeScrollbars="false"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/dailyStats"
                android:textColor="@color/textLighter"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Statistics" />

            <View
                android:id="@+id/divider0"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/textLightest"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:id="@+id/timeTodayText"
                    android:textColor="@color/textLight"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time driven:"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:id="@+id/timeTodayTime"
                    android:textColor="@color/textLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="38 min"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>





            <View
                android:id="@+id/divider2"
                android:layout_marginTop="15dp"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/textLightest"/>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/KmByFuel"
                    android:layout_width="wrap_content"
                    android:textColor="@color/textLight"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="0.09 Km/L"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/distanceByFuel"
                    android:textColor="@color/textLight"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Distance/Fuel"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>


            <TextView
                android:id="@+id/totalStats"
                android:textColor="@color/textLighter"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Total Statistics" />
            <View
                android:id="@+id/divider4"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/textLightest"/>


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/timeTotalTime"
                    android:textColor="@color/textLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="38 min"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/timeTotalText"
                    android:textColor="@color/textLight"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time driven:"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <View
                android:id="@+id/divider5"
                android:layout_marginTop="15dp"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/textLightest"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/distanceTotaldistance"
                    android:layout_width="wrap_content"
                    android:textColor="@color/textLight"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="23 km"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/distanceTotalText"
                    android:textColor="@color/textLight"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Distance driven:"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

            <View
                android:id="@+id/divider6"
                android:layout_marginTop="15dp"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/textLightest"/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">


                <TextView
                    android:id="@+id/fuelTotalFuel"
                    android:layout_width="wrap_content"
                    android:textColor="@color/textLight"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="3 L"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/fuelTotalText"
                    android:textColor="@color/textLight"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Fuel consumption"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>



            <TextView
                android:id="@+id/violationsTitle"
                android:textColor="@color/textLighter"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Violations" />

            <View
                android:id="@+id/divider8"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/textLightest"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">


                <TextView
                    android:id="@+id/numberOfViolations"
                    android:textColor="@color/textLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="4"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/violationsText"
                    android:textColor="@color/textLight"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Violations"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>


            <TextView
                android:id="@+id/sessionTitle"
                android:textColor="@color/textLighter"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Driver History" />

            <View
                android:id="@+id/divider9"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/textLightest"/>


            <ListView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:id="@+id/sessionListView" />


        </LinearLayout>


    </ScrollView>
</RelativeLayout>